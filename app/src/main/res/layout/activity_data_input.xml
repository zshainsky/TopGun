<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/droneNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Drone Name"
            android:textAlignment="gravity"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/droneName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textAlignment="center"/>
    </LinearLayout>

    <Switch
        android:id="@+id/disableObstacleAvoidance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:text="@string/disableObstacleAvoidance"
        android:textAlignment="gravity"
        android:padding="10dp"
        />

    <Switch
        android:id="@+id/enableTripodMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:checked="false"
        android:text="@string/enableTripodMode"
        android:textAlignment="gravity"
        tools:checked="false"
        android:padding="10dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight=".125"
        android:background="@android:color/holo_green_dark"
        android:onClick="submit"
        android:text="Submit" />


</LinearLayout>
